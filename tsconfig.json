{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"outDir": "dist",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"#/*": ["./app/*"],
			"@components/*": ["./components/*"],
			"@lib/*": ["./lib/*"],
			"@utils/*": ["./utils/*"],
			"@routes/*": ["./routes/*"],
			"@config/*": ["./config/*"],
			"@core/*": ["./core/*"],
			"@constants/*": ["./constants/*"],
			"@types/*": ["./types/*"],
			"@hooks/*": ["./hooks/*"]
		},
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "dist", ".next", "public", "coverage", "build"]
}
