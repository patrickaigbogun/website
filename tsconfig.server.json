{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"outDir": "dist",
		"rootDir": ".",
		"module": "ESNext",
		"target": "esnext",
		"jsx": "react",
		"moduleResolution": "bundler",
		"sourceMap": false
	},
	"include": [
		"app.ts",
		"routes/**/*.ts",
		"plugins/**/*.ts",
		"server/**/*.ts",
		"services/**/*.ts",
		"lib/server/**/*.ts",
		"config/**/*.ts",
		"core/**/*.ts",
		"constants/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		".next",
		"public",
		"coverage",
		"build",
		"app/**/*",
		"pages/**/*",
		"components/**/*",
		"styles/**/*",
		"tests/**/*",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
